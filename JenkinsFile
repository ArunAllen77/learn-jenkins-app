pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo'build now'
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    ls -la 
                    '''
                echo 'build completed'

            }
        }
    }
}
